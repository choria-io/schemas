{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "https://choria.io/schemas/choria/registration/v1/filecontent.json",
    "description": "Data generated by the File Content Registration Plugin",
    "title": "choria:registration:filecontent:1",
    "type":"object",
    "required":[
        "mtime",
        "file",
        "protocol"
    ],
    "properties": {
        "protocol": {
             "type":"string",
             "enum": [
                 "choria:registration:filecontent:1"
             ]
         },
         "mtime": {
             "type":"integer",
             "description": "Unix time the file was edited in machine local time"
         },
         "file": {
             "type":"string",
             "description": "The file being published"
         },
         "content": {
             "type":"string",
             "description": "Base64 encoded contents of the file"
         },
         "zcontent": {
             "type":"string",
             "description": "Base64 encoded zlib compressed contents of the file"
         }
    }
}